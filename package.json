{
  "name": "zodirectus",
  "version": "1.0.0",
  "description": "Generate Zod schemas and TypeScript types from Directus collections",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "zodirectus": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm test && pnpm run build"
  },
  "keywords": [
    "directus",
    "zod",
    "typescript",
    "schema",
    "generator",
    "cms",
    "headless"
  ],
  "author": "Artak Kolyan <a.kolyan@gratun.am>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/InformationSystemsAgency/zodirectus.git"
  },
  "bugs": {
    "url": "https://github.com/InformationSystemsAgency/zodirectus/issues"
  },
  "homepage": "https://github.com/InformationSystemsAgency/zodirectus#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "zod": "^3.22.4",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
